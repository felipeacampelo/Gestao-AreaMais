# Django Settings
DJANGO_SECRET_KEY=gerar-uma-chave-super-segura-aqui-use-python-secrets
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=areamais-production.up.railway.app,.railway.app

# Database (Railway cria automaticamente)
# DATABASE_URL=postgresql://...

# CORS
CORS_ALLOWED_ORIGINS=https://areamais-frontend.up.railway.app

# URLs
FRONTEND_URL=https://areamais-frontend.up.railway.app
BACKEND_URL=https://areamais-production.up.railway.app

# Asaas Payment Gateway
ASAAS_API_KEY=sua-chave-asaas-aqui
ASAAS_WALLET_ID=seu-wallet-id-aqui
ASAAS_ENVIRONMENT=production

# Google OAuth (opcional)
GOOGLE_CLIENT_ID=seu-google-client-id
GOOGLE_CLIENT_SECRET=seu-google-client-secret

# Email (se configurar)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=seu-email@gmail.com
EMAIL_HOST_PASSWORD=sua-senha-app
